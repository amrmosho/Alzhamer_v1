<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="layout_style" >
        <item  name="android:background" >  @color/colorAccent</item>
    </style>

    <style name="main_panel" >
        <item  name="android:layout_width" >  match_parent</item>
        <item  name="android:layout_height" >  match_parent</item>
        <item  name="android:background" >  #ffffff</item>
        <item  name="android:layout_margin" >  16dp</item>
        <item  name="android:padding" >  8dp</item>
    </style>

    <style name="btn">


        <item  name="android:layout_width" >  50dp</item>
        <item  name="android:layout_height" >  50dp</item>
        <item  name="android:background" >  @drawable/circal_acc</item>
        <item  name="android:padding" >  8dp</item>
        <item  name="android:tint" >  @color/colorAccent</item>

        <item  name="android:elevation" >  8dp</item>





    </style>
    <style name="btn_small" parent="btn">


        <item  name="android:layout_width" >  30dp</item>
        <item  name="android:layout_height" >  30dp</item>





    </style>



    <style name="normal_text">
        <item  name="android:layout_width" >  wrap_content</item>
        <item  name="android:layout_height" >  wrap_content</item>
        <item  name="android:textColor" > #333</item>
        <item  name="android:textSize" >  16sp</item>
        <item  name="android:fontFamily" >@font/allerta</item>




    </style>

    <style name="data_text" parent="normal_text">

        <item  name="android:textSize" >  18sp</item>

        <item  name="android:textColor" > @color/colorPrimaryDark</item>


    </style>

    <style name="big_text"  parent="data_text">

        <item  name="android:textSize" >  22sp</item>

        <item  name="android:textStyle">bold</item>

    </style>

</resources>
